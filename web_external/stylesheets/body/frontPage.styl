@import 'nib'

.c-frontpage-section
  padding 50px
  text-align center

  &.first
    background-color #c3eab3
    margin-top 54px
    color #222

  &.second
    background-color #7554ed
    color white

  h1
    text-transform uppercase
    font-size 30px
    font-weight bold

  p
    margin-top 13px
    font-size 18px

.c-frontpage-button
  border-radius 5px
  margin-top 20px
  font-size 19px
  font-weight bold
  display inline-block
  padding 10px 11px 10px 18px
  cursor pointer

  i
    margin-left 8px

  &.c-participate-button
    border 3px solid white
    background-color #5434ce
    color white

    &:hover
      background-color #4828c8

  &.c-create-challenge-button
    border 3px solid #333
    background-color #d7c6a4
    color #333

    &:hover
      background-color #cfbe9c
